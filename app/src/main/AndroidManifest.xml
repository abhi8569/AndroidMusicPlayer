<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.abhi8569.musicplayer" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.NoActionBar" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Library"
            android:label="@string/title_activity_library"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.MyApp" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.abhi8569.musicplayer.MainActivity" />
        </activity>
        <activity
            android:name=".Album"
            android:label="@string/title_activity_album"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.abhi8569.musicplayer.MainActivity" />
        </activity>
        <activity
            android:name=".Artist"
            android:label="@string/title_activity_artist"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.abhi8569.musicplayer.MainActivity" />
        </activity>
        <activity
            android:name=".Songs"
            android:label="@string/title_activity_songs"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.abhi8569.musicplayer.MainActivity" />
        </activity>
        <activity
            android:name=".PlayingNow"
            android:label="@string/title_activity_playing_now"
            android:theme="@style/Theme.MyApp">
        </activity>
    </application>

</manifest>
